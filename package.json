{
  "name": "docs-template",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/server/index.ts",
    "start": "NODE_ENV=production bun src/server/index.ts",
    "build:content": "bun src/server/mdx/compiler.ts",
    "build:client": "bun build src/client/entry.tsx --outdir public/assets --target browser --minify --splitting",
    "build": "bun run build:content && bun run build:client"
  },
  "dependencies": {
    "@elysiajs/static": "^1.3",
    "@mdx-js/mdx": "^3.1.0",
    "@shikijs/rehype": "^3.0.0",
    "@sinclair/typebox": "^0.34.48",
    "elysia": "^1.3",
    "flexsearch": "^0.7.43",
    "gray-matter": "^4.0.3",
    "lucide-react": "^0.475.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "rehype-autolink-headings": "^7.0.0",
    "rehype-slug": "^6.0.0",
    "remark-frontmatter": "^5.0.0",
    "remark-gfm": "^4.0.0",
    "shiki": "^3.0.0",
    "yaml": "^2.7.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/flexsearch": "^0.7.6",
    "tailwindcss": "^4.0.0",
    "@tailwindcss/cli": "^4.0.0"
  }
}
